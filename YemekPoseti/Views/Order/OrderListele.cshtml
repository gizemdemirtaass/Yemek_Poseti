@model IEnumerable<YemekPoseti.Models.OrderModel>

@{
    ViewBag.Title = "OrderListele";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}

<h2>Sipariş Listesi</h2>

<p>
    @Html.ActionLink("Sipaiş Oluştur", "OrderEY")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.OrderID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CustomerID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OrderDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OrderAddress)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OrderPrice)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProductID)
    </td>
    <td>
        @Html.ActionLink("Edit", "OrderEY", new { id = item.OrderID }) |
        @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
        @Html.ActionLink("Delete", "OrderDelete", new { id = item.OrderID })
    </td>
</tr>
}

</table>
